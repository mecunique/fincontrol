{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 500px;">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-center mb-4"> Connexion</h2>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label for="username" class="form-label">Nom d'utilisateur</label>
                        <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" required>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="remember_me">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-primary">Se connecter</button>
                    </div>
                </form>

                <div class="mt-3 text-end">
                    <a href="#">Mot de passe oublié ?</a> {# Сюда позже можно поставить route восстановления #}
                </div>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-1">Vous n’avez pas encore de compte ?</p>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-secondary">
                        S'inscrire maintenant
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
