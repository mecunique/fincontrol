{% extends 'base.html.twig' %}

{% block title %}Modifier la transaction{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">✏️ Modifier la transaction</h2>
            <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
                ← Retour à la liste
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                {{ include('transaction/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                <hr class="my-4">

                <div class="text-end">
                    {{ include('transaction/_delete_form.html.twig',{'button_label': 'Supprimé'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
